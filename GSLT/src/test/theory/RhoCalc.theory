Theory RhoCalc(qd: QuoteDropCalc) = {
  Exports {
    Proc extends qd.Proc ;
    Name extends qd.Name ;
  }
  Terms {
    PSend . Proc ::= Name "!" "(" Proc ")" ;
    PRecv . Proc ::= "for" "(" (Bind Name [2]) "<-" Name ")" "{" Proc "}" ;
  }
  Equations {
  }
  Rewrites {
    RComm : ( PPar.Proc ( PRecv.Proc y x P) ( PSend.Proc x Q ) ) ~> ( Subst P ( NQuote.Name Q ) y ) ;
  }
}
