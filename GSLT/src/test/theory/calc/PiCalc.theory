Theory PiCalc(nr: NewReplCalc) {
  Exports {
    Proc extends nr.Proc ;
    Name extends nr.Name ;
  }
  Terms {
    PSend . Proc ::= Name "!" "(" Name ")" ;
    PRecv . Proc ::= "for" "(" (Bind Name [2]) "<-" Name ")" "{" Proc "}" ;
  }
  Equations {}
  Rewrites {
    RComm : ( PPar ( PRecv y x P) ( PSend x z ) ) ~> ( Subst P z y ) ;
  }
}
